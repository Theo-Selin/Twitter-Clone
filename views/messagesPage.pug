extends layouts/main-layout.pug 

block content

    if errorMessage
        span.errorMessage #{errorMessage}
    else
        script.
            const chatId = "!{chat._id}"

        .messagePageContainer
            .messageTitleBarContainer
                +createMessageImage(chat, userLoggedIn)
                span#messageName This is the chat
            
            .mainContentContainer
                .messageContainer
                    .chatMessages

                    .footer
                        textarea(name="messageInput", placeholder="Write a message") 
                        button.sendMessageButton
                            i.fa-solid.fa-paper-plane

block scripts
    script(src="/javascript/messagesPage.js") 