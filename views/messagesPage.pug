extends layouts/main-layout.pug 

block content

    if errorMessage
        span.errorMessage #{errorMessage}
    else
        script.
            const chatId = "!{chat._id}"

        .messagePageContainer
            .messageTitleBarContainer
                +createMessageImage(chat, userLoggedIn)
                span#chatName(data-bs-toggle="modal", data-bs-target="#chatNameModal") This is the chat
            
            .mainContentContainer
                .messageContainer
                    .chatMessages

                    .footer
                        textarea.chatTextbox(name="messageInput", placeholder="Write a message") 
                        button.sendMessageButton
                            i.fa-solid.fa-paper-plane
        +createChatNameModal(chat)

block scripts
    script(src="/javascript/chatPage.js") 