extends layouts/main-layout.pug 

block content

    .searchBarContainer
        i.fa-solid.fa-magnifying-glass
        input#searchInput(type="text", name="searchInput", data-search=selectedTab, placeholder="Search for users or posts")

    .tabsContainer
        +createProfileTab("Posts", "/search/posts", selectedTab != "users")
        +createProfileTab("Users", "/search/users", selectedTab == "users")
    
    .resultsContainer

    +createPostModals(userLoggedIn)

block scripts
    script(src="/javascript/search.js") 